@page
@model PokemonRepo.UI.Pages.FightingCage.CreateChatroomModel
@{
}

<body style="align-content: center; justify-content: center;">
    <div class="row" style="justify-content: center;">
        <div class="col-6" style="        Background-color: Black;
        border-radius: 40px;
        border: 5px solid yellow; ">
            <div class="Thiscontainer">
                <div class="d-flex justify-content-center h-100">
                    <div class="Thiscard">
                        <div class="Thiscard-header">
                            <h1 style="color: greenyellow">Create ChatRoom</h1>
                        </div>
                        <div class="card-body">
                            <form method="post">
                                <div class="Thisinput-group form-group">
                                    <div class="Thisinput-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-comment"></i></span>
                                    </div>
                                    <input placeholder="Chatroom Name" asp-Action="" asp-for="@Model.ChatRoomName"/>
                                </div>
                                <div class="Thisinput-group form-group">
                                    <div class="Thisinput-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-file-alt"></i></span>
                                    </div>
                                    <textarea placeholder="Description" style="width: 182px; min-height: 100px;" asp-for="@Model.ChatRoomDescription"></textarea>
                                </div>
                                <div class="form-group">
                                    <button class="btn float-right btn-outline-light">Create Room</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
