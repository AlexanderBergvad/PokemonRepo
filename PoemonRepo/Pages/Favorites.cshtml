@page
@model PoemonRepo.Pages.FavoritesModel
@{
}
<div class="container">
    <div class="row">
        @for (int i = 0; i < @Model.FavoritePokemons.Count; i++)
        {
            if (i % 3 == 0)
            {
            @:</div><div class="row">
            }
            <div class="col-4" style="margin:7px 0px 0px 0px; min-width:250px;">
                <div class="Mycard-block Mycard-1">
                    <div class="row">
                        <div class="col" style="margin: 10px 10px 10px 10px">
                            <img src="@Model.FavoritePokemons[i].imageString" alt="Avatar" style="width:100%;height:100%;">
                        </div>
                        <div class="col">
                            <p style="">Height: <br /> @Model.FavoritePokemons[i].Height</p>
                            <p>Weight: <br /> @Model.FavoritePokemons[i].Weight</p>
                            <p>Move: <br /> @Model.FavoritePokemons[i].Moves.First().move.Name</p>
                        </div>
                    </div>
                    <div class="row" style="margin: 0 10px 15px 10px">
                        <div class="col-7" style="margin-right: 10px;">
                            <h1 style="font-family: 'Segoe Script'; font-size: 20px">@Model.FavoritePokemons[i].Name.ToUpper()</h1>
                        </div>
                        <div class="col-4">
                            <form action="" method="post">
                                <input type="text" value="@Model.FavoritePokemons[i].Name" asp-for="FavoritePokemon" hidden />
                                <a href="#" onclick="this.parentNode.submit()">
                                    @if (@Model.FavoritePokemons.FirstOrDefault(p => p.Name == Model.FavoritePokemons[i].Name) != null)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star"></i>
                                    }
                                </a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>